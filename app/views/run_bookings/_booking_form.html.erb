<!-- Modal -->
<div class="modal fade" id="booking" tabindex="-1" role="dialog" aria-labelledby="bookingModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="bookingModal"><%= @run.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><b>Distance:</b> <%= @run.run_distance %>km</p>
        <p><b>Pace:</b> <%= @run.pace %>min/km</p>
        <p><b>Groupe size:</b> <%= @run.group_number %>people max</p>
      <div>
        <p><b>Where ? </b><%= @run.location %></p>
        <p><b>When ? </b><%= @run.date_time %></p>
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

        <%= link_to "Submit request", run_run_bookings_path(@run), class: "btn btn-primary", method: :post %>
      </div>
    </div>
  </div>
</div>

