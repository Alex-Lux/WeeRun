<div class="button">
  <%= simple_form_for "", url: runs_search_path, :method => :get do |f| %>
   <%= f.text_field :search, value: params[:search], placeholder: "City", class: "btn-medium" %>
   <%= f.text_field :run_distance, value: params[:run_distance], placeholder: "Running distance", class: "btn-medium" %>
   <%= f.text_field :pace, value: params[:pace], placeholder: "Average pace", class: "btn-medium" %>
    <%= f.submit "Search", class: "btn btn-primary btn-treehouse" %>
  <% end %>
</div>
