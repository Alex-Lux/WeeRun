
<div id="run-<%= run.id %>" class="col-xs-12 col-sm-6 col-lg-4 run-card-wrapper padded-top">
  <div class="run-card-container">


      <!-- Run Image and Owner Avatar -->
      <div class="run-card-image" style="background-image: url(<%= cl_image_path(run.photo) %>);">
        <div class="avatar-rounded">
            <% if run.user.photo %>

              <%= image_tag run.user.photo, class: "avatar-card"%>

            <% end %>
        </div>
      </div>

      <!-- Run Bottom Row (Price, Name, Duration, Sport)  -->
      <div class="run-card-details">
        <div class="card-row">
          <span class="run-card-name"><%= run.name.titleize %> | </span>
          <span class="run-card-location"> <%= run.location %></span>
        </div>
        <div class="card-row">
          <span class="run-card-distance"><%= run.run_distance %> km |</span>
          <span class="run-card-pace"><%= run.pace %> min/km</span>
        </div>
        <div class="card-row">
          <span class="run-card-datetime"><%= run.date_time %></span>
        </div>
      </div>

      <%= link_to run, class: "run-card-link" do%>
      <% end %>
  </div>
</div>


